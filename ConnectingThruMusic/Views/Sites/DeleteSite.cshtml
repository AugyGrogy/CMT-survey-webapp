@model StaffMembers.Sites

@{
    ViewData["Title"] = "Delete Site";
}

<h1>Delete Site</h1>

<br />
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Site Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.siteName)
        </dd>
    </dl>
    
    <form asp-action="DeleteSite" class="text-center">
        <input type="hidden" asp-for="siteID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="SitesIndex">Back to Sites</a>
    </form>
</div>
