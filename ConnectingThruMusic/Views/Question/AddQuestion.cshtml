@{
    ViewData["Title"] = "Home Page";
}

<div>
    <form name="quesion-form" style="margin: 0 auto; width: 500px; padding: 0; border: 1px solid #CCC; border-radius: 1em;" class="text-center">
        <p>Question: </p> <!--Question Field-->
        <input type="text" name="questionText" style="width:500px;height:300px;font-size:16pt;" required />
        <p>Question Type: </p> <!--Choose question type-->
        <select name="questionType" id="questionType" required>
            <option disabled value="" selected>Select Option</option>
            <option value="TF">True/False</option>
            <option value="KR">Knowledge Range</option>
            <option value="MC">Multiple Choice</option>
            <option value="TB">Text Box</option>
        </select>
        <p>Answers: </p>
        <input type="text" name="question" required />
        <p>
            <button name="add-answer">Add Additional Answer</button> <!--Adds a new field to input extra answers-->
        </p>
    </form>
</div>