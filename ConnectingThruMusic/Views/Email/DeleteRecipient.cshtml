@model StaffMembers.Recipient

@{
    ViewData["Title"] = "Delete Recipient";
}

<h1>Delete Recipient</h1>


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Type:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecipientType)
        </dd>
        <dt class = "col-sm-2">
            Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Child Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChildName)
        </dd>
        <dt class="col-sm-2">
            sessionID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.sessionID)
        </dd>
        <dt class="col-sm-2">
            siteID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.siteID)
        </dd>
    </dl>
    
    <form asp-action="DeleteRecipient" class="text-center">
        <input type="hidden" asp-for="RecipientID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="RecipientIndex">Back to Emails</a>
    </form>
</div>
