@model IEnumerable<StaffMembers.Questions>

@{
    ViewData["Title"] = "Create Survey";
}

<!DOCTYPE html>

<style>
    table {
        margin: 0 auto;
        width: 500px;
        padding: 1em;
        border: 1px solid #CCC;
        border-radius: 1em;
    }
</style>

<head>
    <meta name="viewport" content="width = device-width" />
    <title>Create Survey</title>
</head>

<div style="margin: 0 auto; width: 500px; padding: 0; " class="text-center">

    <label for="SurveyName">Survey Name:</label>
    <br />
    <input type="text" name="SurveyName" id="SurveyName" />

    <!--Input for Survey Name

        <label asp-for="SurveyName">Name:</label><br />
    <input asp-for="SurveyName" type="text" name="name" id="name" />
    <span asp-validation-for="SurveyName" class="text-danger"></span>
    -->

    <br /><br />

    <label for="Recipent">Type of Survey:</label>
    <br />
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
        <label class="form-check-label" for="inlineRadio1">Parent</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
        <label class="form-check-label" for="inlineRadio2">Instructor</label>
    </div>

    <!--Input for Survey Type
    <div class="form-check form-check-inline">
        Html.RadioButtonFor(m => m.SurveyType, "Parent") Parent
        <span asp-validation-for="SurveyType" class="text-danger"></span>
    </div>
    <div class="form-check form-check-inline">

        Html.RadioButtonFor(m => m.SurveyType, "Instructor") Instructor
        <span asp-validation-for="SurveyType" class="text-danger"></span>
    </div>
    -->
    <br />

</div>

<br /><br />

<body>

    <table class="table">
        <thead>
            <tr>
                <th>Question</th>

                <th class="text-center">Add Question</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuestionText)
                    </td>
                    <td class="text-center">
                        <input type="checkbox">
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

<br />

<div class="text-center">
    <button type="button" class="btn btn-success text-center">Create Survey</button>
</div>



